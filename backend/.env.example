# EduSynapse Backend Environment Variables
# Copy this file to .env and fill in your values

# ===========================================
# SERVER CONFIGURATION
# ===========================================
APP_NAME=EduSynapse
APP_ENV=development
DEBUG=true
HOST=0.0.0.0
PORT=8000

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
MONGODB_URL=mongodb://localhost:27017
MONGODB_DB_NAME=edusynapse

# ===========================================
# JWT AUTHENTICATION
# ===========================================
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ===========================================
# LLM API KEYS (PLACEHOLDERS)
# ===========================================
# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview

# Google Gemini Configuration
GOOGLE_API_KEY=your-google-gemini-api-key-here
GEMINI_MODEL=gemini-1.5-flash

# Default LLM Provider (openai or gemini)
DEFAULT_LLM_PROVIDER=openai

# ===========================================
# CREWAI CONFIGURATION
# ===========================================
CREWAI_VERBOSE=true
CREWAI_MAX_RETRIES=3
CREWAI_TIMEOUT=120

# ===========================================
# VECTOR STORE CONFIGURATION
# ===========================================
ANNOY_INDEX_PATH=./data/annoy_index.ann
ANNOY_DIMENSIONS=384
ANNOY_METRIC=angular
ANNOY_NUM_TREES=100

# ===========================================
# EMBEDDING MODEL
# ===========================================
EMBEDDING_MODEL=all-MiniLM-L6-v2

# ===========================================
# KNOWLEDGE BASE
# ===========================================
KNOWLEDGE_BASE_PATH=./data/knowledge_base

# ===========================================
# CORS CONFIGURATION
# ===========================================
CORS_ORIGINS=http://localhost:8080,http://localhost:3000,http://127.0.0.1:8080

# ===========================================
# RATE LIMITING
# ===========================================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60
